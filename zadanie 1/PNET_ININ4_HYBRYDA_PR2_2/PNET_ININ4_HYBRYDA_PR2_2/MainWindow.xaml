<Window x:Class="PNET_ININ4_HYBRYDA_PR2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="10">
            <Label Content="Group 1" Style="{StaticResource GroupLabel}"/>
            <Label Content="Group 2" Style="{StaticResource SpecialGroupLabel}"/>
            <Label Content="Group 3" Style="{StaticResource GroupLabel}"/>
        </StackPanel>

        <WrapPanel Grid.Column="1" Grid.Row="1" Margin="10" HorizontalAlignment="Right">
            <Button Content="Button 1" Style="{StaticResource WrapPanelButton}"/>
            <Button Content="Button 2" Style="{StaticResource WrapPanelButton}"/>
            <Button Content="Button 3" Style="{StaticResource WrapPanelButton}"/>
            <Button Content="Button 4" Style="{StaticResource WrapPanelButton}"/>
            <Button Content="Button 5" Style="{StaticResource WrapPanelButton}"/>
        </WrapPanel>
    </Grid>
</Window>